#include<stdio.h>
int main(){
    int row,star,space,x,n;
    printf("enter limit");
    scanf("%d",&n);
    x=1;
    for(row=1;row<=n;row++)
{
        if(row==1)
        {
            for(space=1;space<=n-row+1;space++)
            {
                printf(" ");
            }
            printf("*");
            printf("\n");
        }
        
        else
        {
            for(space=1;space<=n-row+1;space++)
            {
                printf(" ");
            }
                printf("*");
            for(space=1;space<=x;space++)
            {
                printf(" ");
            }
                printf("*");
                x=x+2;
                printf("\n");
        if(row==n)
        {
            for(star=1;star<=row;star++)
            {
                printf("*");
                printf(" ");
            }
                printf("*");
        }
    }
}
return 0;
}
OUTPUT:-
     *
    * *
   *   *
  *     *
 *       *
* * * * * *
