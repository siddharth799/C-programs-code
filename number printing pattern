#include<stdio.h>
int main(){
    int row,col,x,n;
    printf("enter number");
    scanf("%d",&n);
    x=1;
    for(row=1;row<=n;row++){
        for(col=1;col<=row;col++)
        {
            printf("%d",x);
            x++;
            
        }
            printf("\n");
    }
}
OUTPUT:-
1
23
456
78910
