#include<stdio.h>
int main(){
    int row,col,n;
    printf("enter number");
    scanf("%d",&n);
    for(row=1;row<=n;row++){
        for(col=1;col<=row;col++)
            printf("%d",col);
            printf("\n");
    }
}
OUTPUT:-
1
12
123
1234
12345
123456
---------------------------------------------------------------------------------------------------------
#include<stdio.h>
int main(){
    int row,col,n;
    printf("enter number");
    scanf("%d",&n);
    for(row=1;row<=n;row++){
        for(col=1;col<=row;col++)
            printf("%d",row);
            printf("\n");
    }
}
OUTPUT:-
1
22
333
4444
55555
