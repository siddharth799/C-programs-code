#include<stdio.h>
int main(){
    int col,row,star,space,x,n;
    printf("enter limit");
    scanf("%d",&n);
    x=2*n-2;
    for(row=1;row<=n;row++){
        for(star=1;star<=row;star++){
            printf("*");
        }
        for(space=1;space<=x;space++){
            printf(" ");
        }
        for(star=1;star<=row;star++){
            printf("*");
        }
        printf("\n");
        x=x-2;
    }
}
OUTPUT:-
*        *
**      **
***    ***
****  ****
**********
