#include<stdio.h>
int main(){
    int row ,space ,star,n,x;
    x=1;
    printf("enter number");
    scanf("%d",&n);
    for(row=1;row<=n;row++){
        for(star=1;star<=n-row;star++){
            printf("*");
        }
        for(space=1;space<=x;space++){
            printf(" ");
        
        }
        for(star=1;star<=n-row;star++){
            printf("*");
        }
        x=x+2;
        printf("\n");
    }
    x=2*n-3;
    for(row=1;row<=n-1;row++){
        for(star=1;star<=row;star++){
            printf("*");
        }
        for(space=1;space<=x;space++){
            printf(" ");
        }
        for(star=1;star<=row;star++){
            printf("*");
        }
        x=x-2;
        printf("\n");
    }
}
OUTPUT:-
**** ****
***   ***
**     **
*       *
         
*       *
**     **
***   ***
**** ****
