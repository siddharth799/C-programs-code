#include<stdio.h>
int main(){
    int row,star,space,x,n;
    printf("enter limit");
    scanf("%d",&n);
    for(row=1;row<=n;row++){
        if(row==1||row==n){
            for(star=1;star<=n;star++){
                printf("*");
            }
            printf("\n");
        }
        else{
            for(row=1;row<=n-2;row++){
            printf("*");
            for(space=1;space<=n-2;space++){
                printf(" ");
            }
            printf("*");
            printf("\n");
            }
        }
    }
}
OUTPUT;-
*****
*   *
*   *
*   *
*****
