#include<stdio.h>
int main(){
    int row,space,star,n,x;
    printf("enter row limit");
    scanf("%d",&n);
    x=7;
    for(row=1;row<=n;row++){
        for(space=1;space<=row-1;space++){
            printf(" ");
        }
        for(star=1;star<=x;star++){
            printf("*");
        }
        x=x-2;
        printf("\n");
    }
}
OUTPUT:-
*******
 *****
  ***
   *
